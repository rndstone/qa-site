<header>
  <nav class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'QA', root_url, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <!--<input type="text" class="form-control" placeholder="Search">-->
        </div>
        <% unless @q.blank? %>
          <%= search_form_for @q, class: 'mb5' do |f| %>
            <%= f.search_field :title_cont, class: 'form-control' %>
            <%= f.submit %>
          <% end %>
        <% end %>

        <!--<button type="submit" class="btn btn-default">検索</button>-->
      </form>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to '質問する', new_question_path, class:'btn' %></li>
      <% if logged_in? %>
        <li><%= link_to current_user.name, user_path(current_user.id), class:'btn' %></li>
        <li><%= link_to 'Logout', logout_path, method: :delete, class:'btn' %></li>
      <% else %>
        <li><%= link_to 'Sign up', new_user_path, class: 'btn' %></li>
        <li><%= link_to "Login", login_path, class: 'btn' %></li>
      <% end%>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</header>