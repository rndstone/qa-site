<style>
.list-inline li {
  width: 30%;
}
</style>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2>回答受付中の質問</h2>

				<div class="btn-group">
					<%= link_to '新しい質問', recent_path, class:'btn btn-primary' %>
					<%= link_to '回答受付中', active_question_path, class:'btn btn-primary' %>
				</div>
    	<% @active_questions.each do |question| %>
    		<li class="list-item"><%= link_to question.title, question_path(question.id) %></li>
    	<% end %>
					<h2>カテゴリーから探す</h2>
					<ul class="list-inline">
						<% Category.all.each do |category|%>
							<li class="list-item list-inline-item">
								<%= link_to category.name, categorized_question_path(category_id: category.id) %>
							</li>
						<% end %>
    </div>
    <div class="col-md-3">
      <%= render 'layouts/sidebar', model:@active_questions[1] %>
		</div>
  </div>
</div>